{
  "type": "module",
  "name": "challenge-todo-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "dev": "concurrently \"pnpm run backend:dev\" \"pnpm run frontend:dev\"",
    "dev:backend": "cd functions && pnpm run dev",
    "dev:frontend": "cd frontend-app && pnpm run start",
    "backend:dev": "cd functions && pnpm run dev",
    "backend:build": "cd functions && pnpm run build",
    "backend:start": "cd functions && pnpm run start",
    "backend:serve": "cd functions && pnpm run serve",
    "backend:deploy": "firebase deploy --only functions",
    "backend:logs": "cd functions && pnpm run logs",
    "backend:lint": "cd functions && pnpm run lint",
    "backend:lint:fix": "cd functions && pnpm run lint:fix",
    "frontend:dev": "cd frontend-app && pnpm run start",
    "frontend:build": "cd frontend-app && pnpm run build",
    "frontend:deploy": "firebase deploy --only hosting",
    "frontend:test": "cd frontend-app && pnpm run test",
    "frontend:watch": "cd frontend-app && pnpm run watch",
    "build": "pnpm run backend:build && pnpm run frontend:build",
    "build:backend": "cd functions && pnpm run build",
    "build:frontend": "cd frontend-app && pnpm run build",
    "deploy": "firebase deploy",
    "deploy:production": "pnpm run build && firebase deploy",
    "install:all": "pnpm install && cd functions && pnpm install && cd ../frontend-app && pnpm install",
    "format": "prettier --write \"functions/src/**/*.{ts,tsx,js,jsx,json,md}\" \"frontend-app/src/**/*.{ts,tsx,js,jsx,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"functions/src/**/*.{ts,tsx,js,jsx,json,md}\" \"frontend-app/src/**/*.{ts,tsx,js,jsx,json,md,html,css,scss}\"",
    "format:backend": "prettier --write \"functions/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:frontend": "prettier --write \"frontend-app/src/**/*.{ts,tsx,js,jsx,json,md,html,css,scss}\"",
    "lint": "pnpm run backend:lint",
    "lint:fix": "pnpm run backend:lint:fix",
    "clean": "pnpm run clean:backend && pnpm run clean:frontend",
    "clean:backend": "cd functions && rimraf lib",
    "clean:frontend": "cd frontend-app && rimraf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@types/bcrypt": "6.0.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/node": "24.8.1",
    "concurrently": "^9.0.1",
    "dotenv": "17.2.3",
    "eslint": "9.37.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.1"
  },
  "dependencies": {
    "bcrypt": "6.0.0",
    "cors": "2.8.5",
    "express": "5.1.0",
    "firebase-admin": "13.5.0",
    "primeicons": "^7.0.0"
  }
}
